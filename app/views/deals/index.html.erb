<p id="notice"><%= notice %></p>

<h1>Deals</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Image data</th>
      <th>Original price</th>
      <th>Offer price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @deals.each do |deal| %>
      <tr>
        <td><%= image_tag deal.image_url(:thumb) unless deal.image.blank?%></td>
        <td><%= deal.title %></td>
        <td><%= deal.merchant.full_address %></td>
        <td><%= deal.original_price %></td>
        <td><%= deal.offer_price %></td>
        <td><%= link_to 'VIEW', deal %></td>
        <td><%= link_to 'Edit', edit_deal_path(deal) %></td>
        <td><%= link_to 'Destroy', deal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Deal', new_deal_path %>
