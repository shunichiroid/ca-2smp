<p id="notice"><%= notice %></p>

<p>
  <strong>User:</strong>
  <%= @merchant.user_id %>
</p>

<p>
  <strong>Name:</strong>
  <%= @merchant.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @merchant.description %>
</p>

<p>
  <strong>Address:</strong>
  <%= @merchant.full_address %>
</p>

<p>
  <strong>Website url:</strong>
  <%= @merchant.website_url %>
</p>

<p>
  <strong>Facebook:</strong>
  <%= @merchant.facebook_id %>
</p>

<p>
  <strong>Image:</strong>
  <%= image_tag @merchant.image_url(:thumb) unless @merchant.image.blank?%>
</p>

<p>
  <strong>All Deals:</strong>
  <% @merchant.deals.each do |d|  %>
  <%= d.title %>
  <% end %>
</p>

<%= link_to 'Create a new deal', new_deal_path(@merchant) %>
<%= link_to 'Edit', edit_merchant_path(@merchant) %> |
<%= link_to 'Back', merchants_path %>